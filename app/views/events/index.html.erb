<div class="container">
  <div class="mt-4 mb-3 text-center"><h4 class="m-0">イベント開催カレンダー</h4></div>
    <div class="mt-4 mb-3 text-center">
      <%= form_with model: @event, url: events_path, method: :post do |f| %>
        <div class="form-group">
          <%= f.label :title, "イベント名" %>
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group mt-3">
          <%= f.label :date, "日にち" %>
          <%= f.date_select :date, default: Date.today, class: "form-control" %>
        </div>
        <div class="form-group mt-3">
          <%= f.label :start, "開始" %>
          <%= f.time_select :start, default: Time.now, class: "form-control" %>
        </div>
        <div class="form-group mt-3">
          <%= f.label :end, "終了" %>
          <%= f.time_select :end, default: Time.now + 3.hour, class: "form-control" %>
        </div>
        <div class="form-group mt-3">
          <%= f.submit "新規登録", class: "btn btn-success btn-block" %>
        </div>
      <% end %>
    </div>

    <div class="mt-4 mb-3 text-center">
      <table class="table table-bordered mt-3">
        <thead>
          <tr>
            <th class="bg-info text-white" scope="row" style="width: 40%;">ID</th>
            <td>日にち</td>
          </tr>
        </thead>
        <tbody>
          <% @events.each do |event| %>
            <tr>
              <th scope="row" style="width: 40%;"><%= event.id %></th>
              <td><%= event.date %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      合計：<%= @events.count %>
    </div>

  <div class='mb-5' id='calendar'></div>
</div>